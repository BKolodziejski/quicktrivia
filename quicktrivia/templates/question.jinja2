<div class="full-width-container">
  <div class="container">
    <p id="timer">8</p>
    <img src="{{ image }}">

    <div class="question" id="question-{{ question.id }}">
      {{ question.content }}
    </div>

    {% for answer in answers %}
    <a>
    <div class="answer" id ="answer-{{ answer.id }}">{{ answer.content }}</div>
    </a>
    {% endfor %}
    <p style="clear:both">Your streak: <span id="streak">{{ streak }}</span></p>
  </div>
</div>
